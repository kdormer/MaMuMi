extends admin 
block main
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBgQsUmoRWeiRlclZbkSmn3vIFEmJZaBN4")
    script(src='/s/js/add-journey.view.js', type='module')
    .col-md-5.col-lg-3.pt-1.ml-2
        form#journey-form
            .form-container.mb-3
                .form-title.d-flex.flex-row.justify-content-between.p-2.mb-2
                    h2.h6.m-0= __('admin.create-journey.journey-details')
                    small= __('admin.create-journey.required')
                .form-group-container
                    .form-group.row.m-0
                        label(for='forename').col-md-3.col-form-label-sm= __('admin.dashboard.forename')
                        input(type='text' name='forename', required).col-md-9.form-control.form-control-sm#forename
                    .form-group.row.m-0
                        label(for='surname').col-md-3.col-form-label-sm= __('admin.dashboard.surname')
                        input(type='text' name='surname', required).col-md-9.form-control.form-control-sm#surname
                    .form-group.row.m-0
                        label(for='video_link').col-md-3.col-form-label-sm= __('admin.dashboard.video_link')
                        input(type='url' name='video_link', required).col-md-9.form-control.form-control-sm#video_link
                    .form-group.row.m-0
                        label(for='desc_en').col-md-3.col-form-label-sm= __('admin.create-journey.english')
                        input(type='textarea' name='desc_en').col-md-9.form-control.form-control-sm#desc_en
                    .form-group.row.m-0
                        label(for='desc_es').col-md-3.col-form-label-sm= __('admin.create-journey.spanish')
                        input(type='textarea' name='desc_es').col-md-9.form-control.form-control-sm#desc_es
                    .form-group.row.m-0
                        label(for='desc_bg').col-md-3.col-form-label-sm= __('admin.create-journey.bulgarian')
                        input(type='textarea' name='desc_bg').col-md-9.form-control.form-control-sm#desc_bg
                    .form-group.row.m-0
                        label(for='desc_el').col-md-3.col-form-label-sm= __('admin.create-journey.greek')
                        input(type='textarea' name='desc_el').col-md-9.form-control.form-control-sm#desc_el
                    .form-group.row.m-0
                        label(for='desc_no').col-md-3.col-form-label-sm= __('admin.create-journey.norwegian')
                        input(type='textarea' name='desc_no').col-md-9.form-control.form-control-sm#desc_no
                    .form-group.row.m-0
                        label(for='desc_it').col-md-3.col-form-label-sm= __('admin.create-journey.italian')
                        input(type='textarea' name='desc_it').col-md-9.form-control.form-control-sm#desc_it

                        
            .form-container
                .form-title.d-flex.flex-row.justify-content-between.p-2.mb-2
                    h2.h6.m-0= __('admin.create-journey.journey_pins') 
                    small= __('admin.create-journey.required')
                .form-group-container
                    .table-responsive
                        table.table.table-borderless.table-sm
                            thead 
                                tr 
                                    th(scope='col')= __('admin.create-journey.number')
                                    th(scope='col')
                                    th(scope='col')= __('Delete')
                            tbody#point-body
                                tr#add-row 
                                    td(colspan='100%')
                                        button(type='button').btn.btn-block.btn-outline-secondary.create-btn#point-create-btn
                                            span +
            .form-container.mt-2
                button(type='submit').btn.btn-block#journey-submit= __('Submit')
    .col-md-6.col-lg-8.container-fluid.m-0#gmap-container
        .row.h-100 
            .col-12#gmap

  

                